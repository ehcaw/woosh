{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es6", // Set the target to ES6
    "module": "commonjs", // Use CommonJS modules
    "jsx": "react", // Ensure JSX is set to "react"
    "allowJs": true, // Allow JavaScript files
    "checkJs": false // Disable type checking for JavaScript files
  },
  "include": ["src"] // Include the src directory
}
